# Copy to .env for local runs
# cp .env.example .env

# App
DB_URL=jdbc:postgresql://localhost:5432/bank

# Prefer DB_USER (DB_USERNAME kept for compatibility)
DB_USER=bank
DB_USERNAME=bank
DB_PASSWORD=bank

# Docker Compose resource limits (used by docker-compose.yml)
APP_MEM_LIMIT=512m
APP_CPU_LIMIT=1.0

DB_MEM_LIMIT=512m
DB_CPU_LIMIT=0.5

# Postgres container
POSTGRES_DB=bank
POSTGRES_USER=bank
POSTGRES_PASSWORD=bank

# Optional mock integrations
AUTH_URL=http://localhost:9090/authorize
NOTIFY_URL=http://localhost:9091/notify